{
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "./tests",
      "./node_modules",
      "./dist",
      ".nyc_output"
    ],
    "compilerOptions": {
      "target": "es2022",
      "module": "node16",
      "rootDir": "./src",
      "declaration": true,
      "noImplicitAny":true,
     "sourceMap": true,
      "strictNullChecks":true,
      "noImplicitReturns":true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true
    }
  }
  